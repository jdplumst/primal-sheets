{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "cache": false
    },
    "typecheck": {
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "env": ["DATABASE_URL", "DATABASE_AUTH_TOKEN"]
    },
    "test:unit": {
      "cache": false
    },
    "test:integration": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
